{
  "extends": "eslint:recommended",
  "rules": {
    "no-extra-parens": "error",
    "no-alert": "error",
    "no-bitwise": "error",
    "camelcase": "error",
    "curly": "error",
    "eqeqeq": [
      "error",
      "smart"
    ],
    "guard-for-in": "error",
    "no-empty": "error",
    "brace-style": "error"
  },
  "globals": {
    "$": false
  },
  "env": {
    "browser": true,
    "node": true
  }
}