{
  "template": "action-*",
  "order": 1,
  "settings": {
    "number_of_shards": 1
  },
  "mappings": {
    "action": {
      "_all": {
        "enabled": false
      },
      "dynamic_templates": [
        {
          "context": {
            "path_match": "context.*",
            "mapping": {
              "type": "keyword"
            }
          }
        },
        {
          "perf_stats.count": {
            "path_match": "perf_stats.*.count",
            "mapping": {
              "type": "integer"
            }
          }
        },
        {
          "perf_stats.total_elapsed": {
            "path_match": "perf_stats.*.total_elapsed",
            "mapping": {
              "type": "long"
            }
          }
        }
      ],
      "properties": {
        "date": {
          "type": "date"
        },
        "id": {
          "type": "keyword"
        },
        "app": {
          "type": "keyword"
        },
        "server_ip": {
          "type": "ip"
        },
        "result": {
          "type": "keyword"
        },
        "ref_id": {
          "type": "keyword"
        },
        "action": {
          "type": "keyword"
        },
        "error_code": {
          "type": "keyword"
        },
        "error_message": {
          "type": "text",
          "index": "false"
        },
        "elapsed": {
          "type": "long"
        },
        "cpu_time": {
          "type": "long"
        }
      }
    }
  }
}